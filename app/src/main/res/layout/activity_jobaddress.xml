<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gardian"
    tools:context=".jobaddress">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_gardian"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"

        android:background="@drawable/sampleboxborderinred">


        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/sampleboxborderinred">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:background="@drawable/sampleboxborderinred"
            android:layout_gravity="center"

            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Status"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:hint="Job"
                android:textAlignment="center"
                android:background="@drawable/sampleboxborderinred"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Present Address"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/presentaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:hint="Present Address"
                android:textAlignment="center"
                android:background="@drawable/sampleboxborderinred"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permanent Address"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/permanentaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:hint="Permanent Address"
                android:textAlignment="center"
                android:background="@drawable/sampleboxborderinred"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <Button
                android:id="@+id/submitYourInfo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Save Info"
                android:textColor="#fff"
                android:background="@drawable/btn_gardian"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="7dp"
                android:textAllCaps="false"/>

            <!--   <Button
                   android:id="@+id/back"
                   android:layout_width="200dp"
                   android:layout_height="wrap_content"
                   android:text="Back"
                   android:textColor="#fff"
                   android:background="@drawable/submitbordar"
                   android:textAlignment="center"
                   android:layout_margin="0dp"
                   android:textSize="15dp"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:padding="7dp"
                   android:textAllCaps="false"
                   android:layout_marginBottom="30dp"/>-->

        </LinearLayout>

        <!--
        </ScrollView>-->
    </LinearLayout>



</LinearLayout>