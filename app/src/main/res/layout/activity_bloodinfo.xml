<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gardian"
    tools:context=".bloodinfo">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/background_gardian"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"

        android:background="@drawable/sampleboxborderinred">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:background="@drawable/sampleboxborderinred"
            android:layout_gravity="center"

            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Donate"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"/>

<!--
            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <RadioButton
                    android:id="@+id/maleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="Yes"
                    android:checked="true"
                    android:layout_marginRight="30dp"/>
                <RadioButton
                    android:id="@+id/famelaId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="No"/>

            </RadioGroup>-->


            <EditText
                android:id="@+id/lastblooddonate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:hint="Last blood donate date"
                android:textAlignment="center"
                android:background="@drawable/sampleboxborderinred"
                android:padding="5dp"
                android:inputType="text"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                />


     <!--       <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:padding="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>-->








            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you want to donate blood?"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"/>




            <RadioGroup
                android:id="@+id/radiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <RadioButton
                    android:id="@+id/yesid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="Yes"
                    android:checked="true"
                    android:layout_marginRight="30dp"/>
                <RadioButton
                    android:id="@+id/noid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="No"/>

            </RadioGroup>


            <Button
                android:id="@+id/submitYourInfo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Save Info"
                android:textColor="#fff"
                android:background="@drawable/btn_gardian"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="7dp"
                android:textAllCaps="false"/>



        </LinearLayout>


    </LinearLayout>



</LinearLayout>